<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brown700"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Flower Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/img_flower_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Flower Image" />
        </androidx.cardview.widget.CardView>

        <!-- Flower Name -->
        <TextView
            android:id="@+id/tv_name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="Flower Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/brown700" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_price_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="$0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/pink700" />

        <!-- Description Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brown700" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="Flower description goes here..."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#555555" />

        <!-- Meaning Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:text="Meaning"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brown700" />

        <!-- Meaning Text -->
        <TextView
            android:id="@+id/tv_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="Flower meaning goes here..."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#555555" />

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Add Flower To cart"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/pink700"
            android:textColor="@android:color/white"
            android:padding="12dp" />

<!--        <Space-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="24dp" />-->

    </LinearLayout>
</ScrollView>
