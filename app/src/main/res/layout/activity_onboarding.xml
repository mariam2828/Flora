<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F7F5F7">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp" android:gravity="center_horizontal">
<TextView android:id="@+id/tvWelcome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Welcome to Flora" android:textSize="28sp" android:textStyle="bold" android:textColor="@color/pink_dark" android:layout_marginTop="24dp"/>
<androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="300dp" android:layout_marginTop="32dp" app:cardCornerRadius="20dp" app:cardElevation="4dp">
<ImageView android:id="@+id/imgOnboarding" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/onboarding_flower" android:contentDescription="Flower illustration" android:scaleType="fitXY"/>
</androidx.cardview.widget.CardView>
<TextView android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Get Your Perfect Bloom" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/pink_dark" android:layout_marginTop="32dp"/>
<TextView android:id="@+id/tvDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Sit back and relax! Once you've placed your order, weâ€™ll swiftly prepare it and ensure it reaches its destination, spreading joy and happiness." android:textSize="16sp" android:textColor="#555555" android:gravity="center" android:layout_marginTop="12dp" android:lineSpacingExtra="4dp" android:layout_marginHorizontal="16dp"/>
<LinearLayout android:id="@+id/dotsLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:orientation="horizontal" android:gravity="center">
<View android:layout_width="10dp" android:layout_height="10dp" android:layout_marginEnd="8dp" android:background="@drawable/dot_active"/>
<View android:layout_width="10dp" android:layout_height="10dp" android:layout_marginEnd="8dp" android:background="@drawable/dot_inactive"/>
<View android:layout_width="10dp" android:layout_height="10dp" android:background="@drawable/dot_inactive"/>
</LinearLayout>
<Button android:id="@+id/btnStart" android:layout_width="match_parent" android:layout_height="60dp" android:text="Start Now" android:textSize="18sp" android:textStyle="bold" android:textAllCaps="false" android:textColor="@android:color/white" android:backgroundTint="@color/pink_primary" app:cornerRadius="16dp" android:padding="14dp" android:layout_marginTop="32dp" android:layout_marginHorizontal="16dp"/>
<Space android:layout_width="match_parent" android:layout_height="24dp"/>
</LinearLayout>
</ScrollView>
